<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="130dp"
    android:background="@color/sf_white"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tournament Winter 2018(Upcoming)"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/selected_tournament"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Single Elimination"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/tournament_type"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Format 1 x 1"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:id="@+id/tournament_format"

        />


    <Button
        android:id="@+id/apply_tournament_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tournament_type"
        android:background="@color/sf_white"
        android:text=""
        android:textColor="@color/sf__success_color"
        android:textAllCaps="false"
        />


</RelativeLayout>