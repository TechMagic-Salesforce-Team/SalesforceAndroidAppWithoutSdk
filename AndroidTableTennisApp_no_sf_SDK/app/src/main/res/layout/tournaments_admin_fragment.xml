<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/header"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/create_tournament"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/sf__blue"
            android:gravity="center"
            android:text="Create tournament"
            android:textColor="@color/sf_white"
            android:textSize="12dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:id="@+id/create_tournament_button"
            />

    </LinearLayout>



    <TableLayout
        android:id="@+id/admin_layout_tournaments_table"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:background="#FFF"
        android:stretchColumns="*"
        android:layout_below="@+id/create_tournament"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="Name"
                android:textSize="20dp"
                android:textColor="@color/sf__blue"
                android:minWidth="100dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="T"
                android:textSize="20dp"
                android:textColor="@color/sf__blue"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:text="F"
                android:textSize="20dp"
                android:textColor="@color/sf__blue"
                />

        </TableRow>


    </TableLayout>


</RelativeLayout>